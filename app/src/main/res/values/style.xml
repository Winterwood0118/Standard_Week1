<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_left" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/bg_pink</item>
        <item name="android:background">@drawable/btn_style_left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_right" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/bg_white</item>
        <item name="android:background">@drawable/btn_style_right</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_both" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/bg_pink</item>
        <item name="android:background">@drawable/btn_style_both</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="et_white" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
    </style>


</resources>